<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/passwordFormatD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/WhiteColor"
        android:elevation="5dp"
        android:hint="*  *  *  *"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/TABLELayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/WhiteColor"
        android:visibility="gone">

        <TableRow android:background="@color/WhiteColor">

            <Button
                android:id="@+id/btn70"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="7"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn80"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="8"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn90"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="9"
                android:translationZ="5dp" />
        </TableRow>

        <TableRow android:background="@color/WhiteColor">

            <Button
                android:id="@+id/btn40"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="4"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn50"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="5"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn60"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="6"
                android:translationZ="5dp" />
        </TableRow>

        <TableRow android:background="@color/WhiteColor">

            <Button
                android:id="@+id/btn10"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="1"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn20"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="2"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn30"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="3"
                android:translationZ="5dp" />
        </TableRow>

        <TableRow android:background="@color/WhiteColor">

            <Button
                android:id="@+id/btnStar0"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="*"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btn00"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="0"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/btnHash0"
                android:layout_margin="5dp"
                android:background="@drawable/layout_bg"
                android:elevation="5dp"
                android:text="#"
                android:translationZ="5dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:text="Confirm"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock/Unlock The Door"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/LockTHeDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lock"
            android:textColor="#FF0000" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2">

        <Button
            android:id="@+id/changeKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="Change Passkey" />

        <Button
            android:id="@+id/Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Done" />
    </LinearLayout>

</LinearLayout>